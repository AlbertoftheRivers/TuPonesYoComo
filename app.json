{
  "expo": {
    "name": "TuPonesYoComo",
    "slug": "tuponesyocomo",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D2691E"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tuponesyocomo.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.tuponesyocomo.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#D2691E"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png",
      "name": "TuPonesYoComo",
      "shortName": "TYC",
      "lang": "es",
      "scope": "/",
      "themeColor": "#D2691E",
      "backgroundColor": "#D2691E",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "description": "App para gestionar recetas con IA",
      "dir": "ltr",
      "icons": [
        {
          "src": "./assets/icon.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any maskable"
        },
        {
          "src": "./assets/icon.png",
          "sizes": "512x512",
          "type": "image/png",
          "purpose": "any maskable"
        }
      ]
    },
    "extra": {
      "eas": {
        "projectId": "dc23fd0e-7698-4242-bf33-27d13be05c18"
      }
    }
  }
}
